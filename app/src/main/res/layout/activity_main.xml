<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="5">

        <Button
            android:id="@+id/image_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Image"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0" />

        <Button
            android:id="@+id/video_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Video"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0" />

        <Button
            android:id="@+id/voice_notes_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Voice Notes"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1" />

        <Button
            android:id="@+id/video_notes_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Video Notes"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1" />

        <Button
            android:id="@+id/stickers_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Stickers"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2" />

        <Button
            android:id="@+id/documents_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Documents"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2" />

        <Button
            android:id="@+id/audio_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Audio"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

        <Button
            android:id="@+id/animated_gifs_button"
            android:layout_height="90dp"
            android:backgroundTint="#B4B4B4"
            android:text="Animated Gifs"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>